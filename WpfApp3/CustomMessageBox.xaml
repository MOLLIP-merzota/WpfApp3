<Window x:Class="WpfApp3.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сообщение" Height="150" Width="300"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent" WindowStyle="None">
    <Border Background="White" CornerRadius="10" Padding="10">
        <Border.RenderTransform>
            <ScaleTransform x:Name="ScaleTransform" ScaleX="0" ScaleY="0" CenterX="0.5" CenterY="0.5"/>
        </Border.RenderTransform>
        <StackPanel>
            <TextBlock x:Name="MessageTextBlock" Text="Сообщение" Margin="20" TextWrapping="Wrap" FontSize="20"/>
            <Button Content="OK" Width="75" Margin="10" HorizontalAlignment="Right" Click="OkButton_Click"/>
        </StackPanel>
    </Border>
</Window>
